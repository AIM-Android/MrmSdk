<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true" android:focusableInTouchMode="true"
    tools:context=".BatteryDemoActivity">

    <TextView
        android:id="@+id/lab_title"
        style="@style/CommonStyle_DemoActivityTitleLabel"
        android:text="Battery Demo" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_below="@+id/lab_title"
        android:background="@color/white">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">


            <!-- Power Status & Power Voltage =============================================================================================================== -->

            <LinearLayout
                android:id="@+id/row_power_status"
                style="@style/RowLayout">

                <LinearLayout
                    style="@style/RowLayout_Display">

                    <LinearLayout
                        style="@style/RowLayout_Label">
                        <TextView
                            style="@style/RowContentStyle_Label"
                            android:text="Power Status"/>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/RowLayout_Data"
                        android:padding="0dp">
                        <TextView
                            android:id="@+id/txt_power_status"
                            style="@style/RowContentStyle_Data"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="N/A"/>
                        <LinearLayout
                            style="@style/RowLayout_Label"
                            android:layout_width="0dp"
                            android:layout_weight="1">
                            <TextView
                                style="@style/RowContentStyle_Label"
                                android:textSize="8sp"
                                android:text="Voltage(V)"/>
                        </LinearLayout>
                        <LinearLayout
                            style="@style/RowLayout_Data"
                            android:layout_width="0dp"
                            android:layout_weight="1">
                            <TextView
                                android:id="@+id/txt_power_voltage"
                                style="@style/RowContentStyle_Data"
                                android:text="N/A"/>
                        </LinearLayout>
                        <LinearLayout
                            style="@style/RowLayout_Label"
                            android:visibility="invisible"
                            android:layout_weight="1">
                        </LinearLayout>
                        <LinearLayout
                            style="@style/RowLayout_Data"
                            android:visibility="invisible"
                            android:layout_weight="1">
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        style="@style/RowLayout_Operation"
                        android:visibility="invisible">
                    </LinearLayout>
                </LinearLayout>
                <FrameLayout style="@style/RowLayout_RowDivider" />
            </LinearLayout>
            <!-- =============================================================================================================== -->



            <!-- Battery Status & Battery Voltage=============================================================================================================== -->
            <LinearLayout
                android:id="@+id/row_battery_status"
                style="@style/RowLayout">

                <LinearLayout
                    style="@style/RowLayout_Display">

                    <LinearLayout
                        style="@style/RowLayout_Label">
                        <TextView
                            style="@style/RowContentStyle_Label"
                            android:text="Battery Status"/>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/RowLayout_Data"
                        android:padding="0dp">
                        <TextView
                            android:id="@+id/txt_battery_status"
                            style="@style/RowContentStyle_Data"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="N/A"/>

                        <LinearLayout
                            style="@style/RowLayout_Label"
                            android:layout_width="0dp"
                            android:layout_weight="1">
                            <TextView
                                style="@style/RowContentStyle_Label"
                                android:textSize="8sp"
                                android:text="Voltage(mV)"/>
                        </LinearLayout>

                        <LinearLayout
                            style="@style/RowLayout_Data"
                            android:layout_width="0dp"
                            android:layout_weight="1">
                            <TextView
                                android:id="@+id/txt_battery_voltage"
                                style="@style/RowContentStyle_Data"
                                android:text="N/A"/>
                        </LinearLayout>

                        <LinearLayout
                            style="@style/RowLayout_Label"
                            android:layout_width="0dp"
                            android:layout_weight="1">
                            <TextView
                                style="@style/RowContentStyle_Label"
                                android:textSize="8sp"
                                android:text='Avg. Curr.(mA)'/>
                        </LinearLayout>

                        <LinearLayout
                            style="@style/RowLayout_Data"
                            android:layout_width="0dp"
                            android:layout_weight="1">
                            <TextView
                                android:id="@+id/txt_battery_avg_current"
                                style="@style/RowContentStyle_Data"
                                android:text="N/A"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/RowLayout_Operation"
                        android:visibility="invisible">
                    </LinearLayout>

                </LinearLayout>

                <FrameLayout style="@style/RowLayout_RowDivider" />
            </LinearLayout>
            <!-- =============================================================================================================== -->


            <!-- Battery Temperature=============================================================================================================== -->
            <LinearLayout
                android:id="@+id/row_battery_temper"
                style="@style/RowLayout">

                <LinearLayout
                    android:orientation="horizontal"
                    style="@style/RowLayout_Display">

                    <LinearLayout
                        style="@style/RowLayout_Label">
                        <TextView
                            style="@style/RowContentStyle_Label"
                            android:text="Battery Temperature"/>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/RowLayout_Data">
                        <TextView
                            android:id="@+id/txt_battery_temper"
                            style="@style/RowContentStyle_Data"
                            android:text="N/A"/>
                        <TextView
                            style="@style/RowContentStyle_Data"
                            android:layout_marginLeft="10dp"
                            android:text="Â°C"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        style="@style/RowLayout_Operation">
                    </LinearLayout>
                </LinearLayout>

                <FrameLayout style="@style/RowLayout_RowDivider" />
            </LinearLayout>
            <!-- =============================================================================================================== -->


            <!-- Time To Empty=============================================================================================================== -->
            <LinearLayout
                android:id="@+id/row_battery_time_to_empty"
                style="@style/RowLayout">

                <LinearLayout
                    android:orientation="horizontal"
                    style="@style/RowLayout_Display">

                    <LinearLayout
                        android:orientation="vertical"
                        style="@style/RowLayout_Label">
                        <TextView
                            style="@style/RowContentStyle_Label"
                            android:text="Time To Empty"/>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/RowLayout_Data">
                        <TextView
                            android:id="@+id/txt_battery_time_to_empty"
                            style="@style/RowContentStyle_Data"
                            android:text="N/A"/>
                        <TextView
                            style="@style/RowContentStyle_Data"
                            android:layout_marginLeft="10dp"
                            android:text="min." />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        style="@style/RowLayout_Operation">
                    </LinearLayout>
                </LinearLayout>
                <FrameLayout style="@style/RowLayout_RowDivider" />
            </LinearLayout>
            <!-- =============================================================================================================== -->


            <!-- State Of Charge=============================================================================================================== -->
            <LinearLayout
                android:id="@+id/row_battery_state_of_charge"
                style="@style/RowLayout">

                <LinearLayout
                    style="@style/RowLayout_Display">

                    <LinearLayout
                        style="@style/RowLayout_Label">
                        <TextView
                            style="@style/RowContentStyle_Label"
                            android:text="State Of Charge"/>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/RowLayout_Data">
                        <TextView
                            android:id="@+id/txt_battery_state_of_charge"
                            style="@style/RowContentStyle_Data"
                            android:text="N/A"/>
                        <TextView
                            style="@style/RowContentStyle_Data"
                            android:layout_marginLeft="10dp"
                            android:text="%"/>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/RowLayout_Operation">
                    </LinearLayout>
                </LinearLayout>

                <FrameLayout style="@style/RowLayout_RowDivider" />
            </LinearLayout>
            <!-- =============================================================================================================== -->


            <!-- Charge Threshold =============================================================================================================== -->
            <LinearLayout
                android:id="@+id/row_battery_charge_threshold"
                style="@style/RowLayout">

                <LinearLayout
                    style="@style/RowLayout_Display">

                    <LinearLayout
                        style="@style/RowLayout_Label">

                        <TextView
                            style="@style/RowContentStyle_Label"
                            android:text="Charge Threshold" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/RowLayout_Data">
                        <TextView
                            style="@style/RowContentStyle_Data"
                            android:text="Volatage :" />
                        <EditText
                            android:id="@+id/etxt_battery_charge_threshold"
                            style="@style/RowContentStyle_EditTextDecimal"
                            android:text="0" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/RowLayout_Operation">

                        <Button
                            android:id="@+id/btn_get_battery_charge_threshold"
                            style="@style/RowContentStyle_Button"
                            android:text="GET"/>

                        <Button
                            android:id="@+id/btn_set_battery_charge_threshold"
                            style="@style/RowContentStyle_Button"
                            android:text="SET"/>
                    </LinearLayout>
                </LinearLayout>
                <FrameLayout style="@style/RowLayout_RowDivider" />
            </LinearLayout>
            <!--  =============================================================================================================== -->





            <!-- XXX =============================================================================================================== -->
            <!-- =============================================================================================================== -->

        </LinearLayout>
    </ScrollView>

    <FrameLayout
        style="@style/TitelBarShade"
        android:layout_below="@+id/lab_title"></FrameLayout>

</RelativeLayout>
