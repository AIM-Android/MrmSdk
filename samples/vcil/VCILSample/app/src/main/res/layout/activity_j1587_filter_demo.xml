<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mrm.demo.vcil.J1587FilterDemoActivity">

    <!-- Dummy item to prevent AutoCompleteTextView from receiving focus -->
    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0px"
        android:layout_height="0px"/>

    <LinearLayout
        android:id="@+id/layout_title"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/blue">

        <TextView
            android:id="@+id/lab_title"
            style="@style/CommonStyle_DemoActivityTitleLabel"
            android:text="J1587 FILTER SETTING" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_below="@id/layout_title"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="horizontal">



            <!-- LEFT COLUMN=============================================================================================================== -->
            <ScrollView
                android:layout_below="@+id/layout_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white">
                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:orientation="vertical">

                    <!-- Category lab=============================================================================================================== -->
                    <LinearLayout
                        style="@style/RowLayout_Label"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="0"
                        android:gravity="center">

                        <TextView
                            style="@style/RowContentStyle_Label"
                            android:text="J1587 FILTER" />
                    </LinearLayout>
                    <!-- Category lab=============================================================================================================== -->


                    <!-- SEND SETTING =============================================================================================================== -->
                    <LinearLayout
                        style="@style/RowLayout_Data"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="0">


                        <TableLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TableRow android:gravity="center_vertical" android:layout_marginBottom="3dp">
                                <TextView
                                    style="@style/RowContentStyle_Data"
                                    android:text="PID: " />
                                <EditText
                                    android:id="@+id/etxt_j1587_filter_pid"
                                    style="@style/RowContentStyle_EditTextDecimal"
                                    android:inputType="text"
                                    android:text="0000"
                                    android:hint="2 bytes HEX value. ex: 0000 ~ 01FE (except 00FF)"/>
                            </TableRow>
                        </TableLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <Button
                                android:id="@+id/btn_j1587_filter_add"
                                style="@style/RowContentStyle_Button"
                                android:layout_height="30dp"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_margin="5dp"
                                android:text="ADD" />

                            <Button
                                android:id="@+id/btn_j1587_filter_remove"
                                style="@style/RowContentStyle_Button"
                                android:layout_height="30dp"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_margin="5dp"
                                android:text="REMOVE" />

                            <Button
                                android:id="@+id/btn_j1587_filter_get"
                                style="@style/RowContentStyle_Button"
                                android:layout_height="30dp"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_margin="5dp"
                                android:textSize="9sp"
                                android:text="GET ALL\n(show in ListView)" />

                        </LinearLayout>

                    </LinearLayout>




                    <FrameLayout
                        style="@style/RowLayout_RowDivider" />

                    <!-- Category lab=============================================================================================================== -->
                    <LinearLayout
                        style="@style/RowLayout_Label"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="0"
                        android:gravity="center">

                        <TextView
                            style="@style/RowContentStyle_Label"
                            android:text="J1587 FILTER RESET" />
                    </LinearLayout>
                    <!-- Category lab=============================================================================================================== -->


                    <!-- SEND SETTING =============================================================================================================== -->
                    <LinearLayout
                        style="@style/RowLayout_Data"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="0">
                        <Button
                            android:id="@+id/btn_j1587_filter_reset"
                            style="@style/RowContentStyle_Button"
                            android:layout_height="30dp"
                            android:layout_width="match_parent"
                            android:layout_weight="0"
                            android:layout_margin="5dp"
                            android:text="RESET" />
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
            <!-- END LEFT COLUMN =============================================================================================================== -->


            <FrameLayout
                android:layout_height="match_parent"
                android:layout_width="1dp"
                style="@style/RowLayout_RowDivider" />






            <!-- RIGHT COLUMN - RECEIVE SETTING=============================================================================================================== -->
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight="1">

                <!-- Category lab=============================================================================================================== -->
                <LinearLayout
                    style="@style/RowLayout_Label"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="0"
                    android:gravity="center">

                    <TextView
                        style="@style/RowContentStyle_Label"
                        android:text="J1587 FLITER LIST" />
                </LinearLayout>
                <!-- Category lab=============================================================================================================== -->


                <LinearLayout
                    style="@style/RowLayout_Data"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="0">

                    <include layout="@layout/activity_j1587_filter_demo_lst_header_j1587_filter"/>


                    <ListView
                        android:id="@+id/lst_j1587_filter_mask_list"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
            <!-- END RIGHT COLUMN - RECEIVE SETTING=============================================================================================================== -->



        </LinearLayout>


    </LinearLayout>

    <FrameLayout
        style="@style/TitelBarShade"
        android:layout_below="@+id/layout_title"></FrameLayout>
</RelativeLayout>
