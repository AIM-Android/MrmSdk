<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true" android:focusableInTouchMode="true"
    tools:context=".PowerManagementDemoActivity">

    <TextView
        android:id="@+id/lab_title"
        style="@style/CommonStyle_DemoActivityTitleLabel"
        android:layout_alignParentTop="true"
        android:text="Power Management Demo"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_below="@+id/lab_title"
        android:background="@color/white">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">


            <!-- Category lab=============================================================================================================== -->
            <LinearLayout
                style="@style/RowLayout"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    style="@style/RowContentStyle_CategoryLabel"
                    android:text="POWER CONTROL" />
                <FrameLayout style="@style/RowLayout_RowDivider" android:layout_height="4dp"/>
            </LinearLayout>
            <!-- Category lab=============================================================================================================== -->



            <!-- Ign Status=============================================================================================================== -->
            <LinearLayout
                android:id="@+id/row_power_off"
                style="@style/RowLayout">
                <LinearLayout
                    android:orientation="horizontal"
                    style="@style/RowLayout_Display">
                    <LinearLayout
                        style="@style/RowLayout_Label">
                        <TextView
                            style="@style/RowContentStyle_Label"
                            android:text="Power Off" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/RowLayout_Data">
                        <TextView
                            android:id="@+id/txt_power_off_result"
                            style="@style/RowContentStyle_Data"
                            android:text="N/A" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/RowLayout_Operation">
                        <Button
                            android:id="@+id/btn_power_off"
                            style="@style/RowContentStyle_Button"
                            android:text="EXECUTE"/>
                    </LinearLayout>
                </LinearLayout>

                <FrameLayout style="@style/RowLayout_RowDivider" />
            </LinearLayout>
            <!-- =============================================================================================================== -->





            <!-- Category lab=============================================================================================================== -->
            <LinearLayout
                style="@style/RowLayout"
                android:layout_marginTop="20dp">
                <TextView
                    style="@style/RowContentStyle_CategoryLabel"
                    android:text='POWER &amp; BATTERY '  />
                <FrameLayout style="@style/RowLayout_RowDivider" android:layout_height="4dp"/>
            </LinearLayout>
            <!-- Category lab=============================================================================================================== -->

            <!-- Power Mode =============================================================================================================== -->
            <LinearLayout
                android:id="@+id/row_power_mode"
                style="@style/RowLayout">

                <LinearLayout
                    android:orientation="horizontal"
                    style="@style/RowLayout_Display">

                    <LinearLayout
                        style="@style/RowLayout_Label">
                        <TextView
                            style="@style/RowContentStyle_Label"
                            android:text="Power Mode"/>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/RowLayout_Data">
                        <TextView
                            android:id="@+id/txt_power_mode"
                            style="@style/RowContentStyle_Data"
                            android:text="N/A"/>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/RowLayout_Operation">
                        <Button
                            android:id="@+id/btn_get_power_mode"
                            style="@style/RowContentStyle_Button"
                            android:text="GET"/>
                        <Button
                            android:id="@+id/btn_set_power_mode_12v"
                            style="@style/RowContentStyle_Button"
                            android:text="SET 12V"/>
                        <Button
                            android:id="@+id/btn_set_power_mode_24v"
                            style="@style/RowContentStyle_Button"
                            android:text="SET 24V"/>
                    </LinearLayout>
                </LinearLayout>
                <FrameLayout style="@style/RowLayout_RowDivider" />
            </LinearLayout>
            <!-- =============================================================================================================== -->




            <!-- Power Status & Power Voltage =============================================================================================================== -->

            <LinearLayout
                android:id="@+id/row_power_status"
                style="@style/RowLayout">

                <LinearLayout
                    style="@style/RowLayout_Display">
                    <LinearLayout
                        style="@style/RowLayout_Label">
                        <TextView
                            android:text="Power Status"
                            style="@style/RowContentStyle_Label" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/RowLayout_Data"
                        android:padding="0dp">
                        <TextView
                            android:id="@+id/txt_power_status"
                            style="@style/RowContentStyle_Data"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="N/A"/>
                        <LinearLayout
                            style="@style/RowLayout_Label"
                            android:layout_width="0dp"
                            android:layout_weight="1">
                            <TextView
                                style="@style/RowContentStyle_Label"
                                android:textSize="8sp"
                                android:text="Voltage(V)"
                                android:id="@+id/textView3" />
                        </LinearLayout>
                        <LinearLayout
                            style="@style/RowLayout_Data"
                            android:layout_width="0dp"
                            android:layout_weight="1">
                            <TextView
                                android:id="@+id/txt_power_voltage"
                                style="@style/RowContentStyle_Data"
                                android:text="N/A"/>
                        </LinearLayout>
                        <LinearLayout
                            style="@style/RowLayout_Label"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:visibility="invisible"/>
                        <LinearLayout
                            style="@style/RowLayout_Data"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:visibility="invisible"/>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/RowLayout_Operation">
                    </LinearLayout>
                </LinearLayout>

                <FrameLayout style="@style/RowLayout_RowDivider" />
            </LinearLayout>
            <!-- =============================================================================================================== -->



            <!-- Battery Status & Battery Voltage=============================================================================================================== -->

