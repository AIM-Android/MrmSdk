                android:id="@+id/row_battery_status"
                style="@style/RowLayout">

                <LinearLayout
                    style="@style/RowLayout_Display">

                    <LinearLayout
                        style="@style/RowLayout_Label">
                        <TextView
                            style="@style/RowContentStyle_Label"
                            android:text="Battery Status"/>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/RowLayout_Data"
                        android:padding="0dp">
                        <TextView
                            android:id="@+id/txt_battery_status"
                            style="@style/RowContentStyle_Data"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="N/A"/>
                        <LinearLayout
                            style="@style/RowLayout_Label"
                            android:layout_weight="1">

                            <TextView
                                style="@style/RowContentStyle_Label"
                                android:text="Voltage(mV)"
                                android:textSize="8sp"/>
                        </LinearLayout>

                        <LinearLayout
                            style="@style/RowLayout_Data"
                            android:layout_width="0dp"
                            android:layout_weight="1">
                            <TextView
                                android:id="@+id/txt_battery_voltage"
                                style="@style/RowContentStyle_Data"
                                android:text="N/A"/>
                        </LinearLayout>

                        <LinearLayout
                            style="@style/RowLayout_Label"
                            android:layout_width="0dp"
                            android:layout_weight="1">

                            <TextView
                                style="@style/RowContentStyle_Label"
                                android:textSize="8sp"
                                android:text='Avg. Curr.(mA)'/>
                        </LinearLayout>

                        <LinearLayout
                            style="@style/RowLayout_Data"
                            android:layout_weight="1">
                            <TextView
                                android:id="@+id/txt_battery_avg_current"
                                style="@style/RowContentStyle_Data"
                                android:text="N/A"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/RowLayout_Operation">
                    </LinearLayout>

                </LinearLayout>

                <FrameLayout style="@style/RowLayout_RowDivider" />
            </LinearLayout>
            <!-- =============================================================================================================== -->







            <!-- Category lab=============================================================================================================== -->
            <LinearLayout
                style="@style/RowLayout"
                android:layout_marginTop="20dp">
                <TextView
                    style="@style/RowContentStyle_CategoryLabel"
                    android:text="IGNITION " />
                <FrameLayout style="@style/RowLayout_RowDivider" android:layout_height="4dp"/>
            </LinearLayout>
            <!-- Category lab=============================================================================================================== -->



            <!-- Ign Status=============================================================================================================== -->
