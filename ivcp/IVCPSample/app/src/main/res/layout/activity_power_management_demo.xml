                <FrameLayout style="@style/RowLayout_RowDivider" android:layout_height="4dp"/>
            </LinearLayout>
            <!-- Category lab=============================================================================================================== -->

            <!-- Shutdown Mask Status - Ignition  =============================================================================================================== -->
            <LinearLayout
                android:id="@+id/row_shutdown_mask_status_ign"
                style="@style/RowLayout">

                <LinearLayout
                    style="@style/RowLayout_Display">
                    <LinearLayout
