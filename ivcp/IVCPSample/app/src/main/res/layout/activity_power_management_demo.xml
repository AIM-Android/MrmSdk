                            style="@style/RowContentStyle_EditTextDecimal"
                            android:text="0" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/RowLayout_Operation">
                        <Button
                            android:id="@+id/btn_get_lvp_preboot_threshold"
                            style="@style/RowContentStyle_Button"
                            android:text="GET"/>
                        <Button
                            android:id="@+id/btn_set_lvp_preboot_threshold"
                            style="@style/RowContentStyle_Button"
                            android:text="SET"/>
                    </LinearLayout>
                </LinearLayout>
                <FrameLayout style="@style/RowLayout_RowDivider" />
            </LinearLayout>
            <!--  =============================================================================================================== -->



            <!-- Postboot LVP Status =============================================================================================================== -->
            <LinearLayout
                android:id="@+id/row_lvp_postboot_status"
                style="@style/RowLayout">

                <LinearLayout
                    style="@style/RowLayout_Display">
                    <LinearLayout
                        style="@style/RowLayout_Label">
                        <TextView
                            style="@style/RowContentStyle_Label"
                            android:text="Postboot LVP Status" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/RowLayout_Data">
                        <TextView
                            android:id="@+id/txt_lvp_postboot_status"
                            style="@style/RowContentStyle_Data"
                            android:text="N/A"/>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/RowLayout_Operation">
                        <Button
                            android:id="@+id/btn_lvp_postboot_enable"
                            style="@style/RowContentStyle_Button"
                            android:text="ENABLE"/>

                        <Button
                            android:id="@+id/btn_lvp_postboot_disable"
                            style="@style/RowContentStyle_Button"
                            android:text="DISABLE"/>
                    </LinearLayout>
                </LinearLayout>
                <FrameLayout style="@style/RowLayout_RowDivider" />
            </LinearLayout>
            <!--  =============================================================================================================== -->


            <!-- Preboot LVP Threshold =============================================================================================================== -->
            <LinearLayout
                android:id="@+id/row_lvp_postboot_threshold"
                style="@style/RowLayout">

                <LinearLayout
                    style="@style/RowLayout_Display">

                    <LinearLayout
                        style="@style/RowLayout_Label">
                        <TextView
                            style="@style/RowContentStyle_Label"
                            android:text="Postboot LVP Threshold" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/RowLayout_Data">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Voltage :" />
                        <EditText
                            android:id="@+id/etxt_lvp_postboot_threshold"
                            style="@style/RowContentStyle_EditTextDecimal"
                            android:text="0" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/RowLayout_Operation">
                        <Button
                            android:text="GET"
                            android:id="@+id/btn_get_lvp_postboot_threshold"
                            style="@style/RowContentStyle_Button"/>
                        <Button
                            style="@style/RowContentStyle_Button"
                            android:text="SET"
                            android:id="@+id/btn_set_lvp_postboot_threshold"/>
                    </LinearLayout>
                </LinearLayout>
                <FrameLayout style="@style/RowLayout_RowDivider" />
            </LinearLayout>
            <!--  =============================================================================================================== -->


            <!-- Reset LVP Threshold =============================================================================================================== -->
            <LinearLayout
                android:id="@+id/row_reset_lvp_threshold"
                style="@style/RowLayout">

                <LinearLayout
                    style="@style/RowLayout_Display">

                    <LinearLayout
                        style="@style/RowLayout_Label">
                        <TextView
                            style="@style/RowContentStyle_Label"
                            android:text="LVP Reset Threshold" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/RowLayout_Data">
                        <TextView
                            android:id="@+id/txt_reset_lvp_threshold_result"
                            style="@style/RowContentStyle_Data"
                            android:text="N/A"/>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/RowLayout_Operation">
                        <Button
                            android:id="@+id/btn_reset_lvp_threshold"
                            style="@style/RowContentStyle_Button"
                            android:text="RESET"/>
                    </LinearLayout>
                </LinearLayout>
                <FrameLayout style="@style/RowLayout_RowDivider" />
            </LinearLayout>
            <!--  =============================================================================================================== -->




            <!-- Category lab=============================================================================================================== -->
            <LinearLayout
                style="@style/RowLayout"
                android:layout_marginTop="20dp">
                <TextView
                    style="@style/RowContentStyle_CategoryLabel"
                    android:text="EVENT DELAY " />
                <FrameLayout style="@style/RowLayout_RowDivider" android:layout_height="4dp"/>
            </LinearLayout>
            <!-- Category lab=============================================================================================================== -->

            <!-- Event Delay =============================================================================================================== -->
            <LinearLayout
                android:id="@+id/row_event_delay"
                style="@style/RowLayout">
                <LinearLayout
                    style="@style/RowLayout_Display">
                    <LinearLayout
                        style="@style/RowLayout_Label">
                        <TextView
                            style="@style/RowContentStyle_Label"
                            android:text="Event Delay"/>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/RowLayout_Data">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
